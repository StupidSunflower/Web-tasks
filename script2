Задание 2.1

var numbers = [2, 4, 7, 5, 4, 4];
var number = 4;
var lastIndex = -1;
for (i = 0; i< numbers.length; i++){
if(numbers[i] === number){
lastIndex = i;
}
}
console.log(lastIndex);

Задание 2.2
var numbers = [3, 5, 15, 6, 2, 1];
for (var i = 0; i < numbers.length; i++) {
  
for (j = i; j < numbers.length; j++) {
    if (numbers[j] < numbers[i]) {
      var tmp = numbers[i];
      numbers[i] = numbers[j];
      numbers[j] = tmp;
    }

  }
}
console.log( numbers);
